<script>
  window.stickyCart = {
    shop: '{{ shop.permanent_domain }}',
    id: '{{ product.id }}',
  };
</script>
<div id="parent" class="sticky-app-container" style="background-color: #000; display:none;">
  <div class="top-text" style="background-color: #14ffc4; display:flex; justify-content:center;align-items:center">
    <p>Get it while it lasts</p>
    <h3 style="display:none;">Date</h3>
  </div>
  <div class="product-item">
    <div class="product-image-content-variant">
      <div class="product-image-content">
        <div class="product-image">
          <img src="{{ 'thumbs.jpg' | asset_url }}" id="productImg" width="100" height="100" alt="img">
        </div>
        <div class="product-content">
          <div class="product-title-price">
            <h2 class="product-title" id="productTitle"></h2>
            <div class="product-prices">
              <del class="product-compare-price" id="productComparePrice"></del>
              <p class="product-price" id="productPrice"><span id="prodcutCurrencySymbol">$</span></p>
            </div>
          </div>
          <div class="product-info" id="productInfo">
            <div class="product-variant" id="variantsContainer">
              <select id="variantsItem">
                <option value=""></option>
              </select>
            </div>
            <div class="product-action">
              <div class="qty-container">
                <button type="button" class="plus" id="plus" >+</button>
                <input type="number" id="qtyInp" value="1" >
                <button type="button" class="minus" id="minus">-</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="product-add-to-cart">
      <button type="button" class="add-to-cart" id="addToCartBtn">Add to cart</button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sticky Cart",
  "target": "body",
  "stylesheet": "style.css",
  "javascript": "script.js"
}
{% endschema %}
